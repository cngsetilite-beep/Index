<body>
    <div class="container">
        <h1>Apple-Style Popup Demo</h1>
        <p>This is a perfect replica of Apple's modal/popup design. Click the button below to see it in action.</p>
        
        <button class="demo-button" id="openPopup">
            <i class="fas fa-external-link-alt" style="margin-right: 8px;"></i> Show Apple Popup
        </button>
        
        <?php
        // PHP code to handle form submission if needed
        $showSuccessMessage = false;
        $showErrorMessage = false;
        
        if ($_SERVER['REQUEST_METHOD'] === 'POST') {
            if (isset($_POST['action'])) {
                $action = $_POST['action'];
                
                if ($action === 'confirm') {
                    $showSuccessMessage = true;
                } elseif ($action === 'cancel') {
                    $showErrorMessage = true;
                }
            }
        }
        ?>
        
        <?php if ($showSuccessMessage): ?>
        <div class="php-message">
            <h3><i class="fas fa-check-circle" style="color: #34c759; margin-right: 10px;"></i> Action Confirmed</h3>
            <p>You clicked the "Confirm" button in the Apple popup. This is a server-side response from PHP.</p>
            <div class="status-indicator status-success">
                <i class="fas fa-check" style="margin-right: 6px;"></i> Success
            </div>
        </div>
        <?php endif; ?>
        
        <?php if ($showErrorMessage): ?>
        <div class="php-message">
            <h3><i class="fas fa-times-circle" style="color: #ff3b30; margin-right: 10px;"></i> Action Cancelled</h3>
            <p>You clicked the "Cancel" button in the Apple popup. This is a server-side response from PHP.</p>
            <div class="status-indicator status-error">
                <i class="fas fa-times" style="margin-right: 6px;"></i> Cancelled
            </div>
        </div>
        <?php endif; ?>
        
        <div class="apple-popup-overlay" id="popupOverlay">
            <div class="apple-popup" id="applePopup">
                <button class="apple-popup-close" id="closePopup">
                    <i class="fas fa-times"></i>
                </button>
                
                <div class="apple-popup-header">
                    <i class="fas fa-apple-alt"></i>
                    <h2 class="apple-popup-title">Apple Design System</h2>
                    <p class="apple-popup-subtitle">This is an exact replica of Apple's popup modal</p>
                </div>
                
                <div class="apple-popup-content">
                    <p>This popup mimics Apple's design language with precise attention to detail:</p>
                    <ul style="text-align: left; margin-top: 15px; padding-left: 20px; color: #515154;">
                        <li style="margin-bottom: 8px;">Rounded corners (18px radius)</li>
                        <li style="margin-bottom: 8px;">Apple's signature font stack</li>
                        <li style="margin-bottom: 8px;">Correct color palette (#0071e3 for primary actions)</li>
                        <li style="margin-bottom: 8px;">Smooth animations with cubic-bezier timing</li>
                        <li style="margin-bottom: 8px;">Proper spacing and typography scale</li>
                        <li>Close button in the top-right corner</li>
                    </ul>
                    <p style="margin-top: 20px;">You can confirm or cancel this action. The response will be handled by PHP.</p>
                </div>
                
                <form method="POST" action="" class="apple-popup-actions">
                    <button type="submit" name="action" value="cancel" class="apple-popup-button secondary">
                        Cancel
                    </button>
                    <button type="submit" name="action" value="confirm" class="apple-popup-button primary">
                        Confirm
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Get DOM elements
        const openPopupButton = document.getElementById('openPopup');
        const closePopupButton = document.getElementById('closePopup');
        const popupOverlay = document.getElementById('popupOverlay');
        const applePopup = document.getElementById('applePopup');
        
        // Open popup function
        function openPopup() {
            popupOverlay.style.display = 'flex';
            applePopup.classList.remove('closing');
        }
        
        // Close popup function with animation
        function closePopup() {
            applePopup.classList.add('closing');
            
            // Wait for animation to complete before hiding
            setTimeout(() => {
                popupOverlay.style.display = 'none';
                applePopup.classList.remove('closing');
            }, 300);
        }
        
        // Event listeners
        openPopupButton.addEventListener('click', openPopup);
        closePopupButton.addEventListener('click', closePopup);
        
        // Close popup when clicking outside the popup
        popupOverlay.addEventListener('click', function(event) {
            if (event.target === popupOverlay) {
                closePopup();
            }
        });
        
        // Close popup with Escape key
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape' && popupOverlay.style.display === 'flex') {
                closePopup();
            }
        });
        
        // Automatically open the popup if PHP indicates an action was taken
        <?php if (!$showSuccessMessage && !$showErrorMessage): ?>
        // Only auto-open if we're not showing a result message
        window.addEventListener('DOMContentLoaded', function() {
            // Auto-open after a brief delay for demo purposes
            setTimeout(openPopup, 1000);
        });
        <?php endif; ?>
    </script>
</body>
